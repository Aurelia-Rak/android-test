<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="destination"
            type="com.evaneos.data.model.Destination" />

        <variable
            name="viewmodel"
            type="com.evaneos.evaneostest.ui.viewmodel.ItemDestinationViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_destination"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="16dp"
        android:background="@color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:onClick="@{viewmodel::onItemClick}"
        android:elevation="4dp"
        android:focusable="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_image"
            android:scaleType="fitXY"
            android:src="@drawable/default_image"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/avertastd_extrabold"
                android:textColor="@color/white"
                android:textSize="38sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.639"
                android:text="@{destination.name}"
                tools:text="@string/recyclerview_destination_name" />

            <com.grdk.ratingbarsvg.RatingBarSvg
                android:id="@+id/item_rating"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@+id/item_title"
                android:layout_gravity="center_vertical"
                android:isIndicator="true"
                android:progressDrawable="@drawable/custom_ratingbar"
                android:rating="@{destination.rating}"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/item_title" />

            <TextView
                android:id="@+id/item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_rating"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/tag_roundedshape"
                android:fontFamily="@font/avertastd_bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@{destination.tag}"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/item_rating"
                tools:text="@string/recyclerview_tag" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>